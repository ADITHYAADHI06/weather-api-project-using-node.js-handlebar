<!DOCTYPE html>
<html lang="en">
  <head>
 {{>headerlinks}}
  </head>
  <body>
    
    {{>navbar}}

    <div class="container-fluid main_header p-0">
        <div class="row">
            <div class= "col-md-10 col-12 mx-auto">
               <div class="main-content">
                   <form action="#" class="temp-form">
                       <input type="text" name="" id="city_name" placeholder="Enter your city name" autocomplete="off">
                       <input type="submit" value="Search" id="submitBtn">
                   </form>

               </div>
               <div class="tempInformation">
                   <div class="top_layer">
                       <p id="day">tuesday</p>
                       <p id="today_date">13 oct</p>
                   </div>
                   <div class="main_layer ">
                       <p id="city_Name"></p>
                       <div class="middle_layer data_hide" >
                           <p id="temp">
                               <span id="temp_real_val">0</span><sup>o</sup>C
                           </p>
                           <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                       </div>
                   </div>
               </div>
        </div>
    </div>  
    
    </div>
    {{>footer}}


 
    

    <script src="js/main.js"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
